@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h2>Admin Dashboard</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Загальна кількість бронювань</h5>
                    <p class="card-text">@Model.TotalBookings</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Загальний дохід</h5>
                    <p class="card-text">@Model.TotalRevenue.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Заповнюваність</h5>
                    <p class="card-text">@Model.OccupancyRate.ToString("P1")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Очікують підтвердження</h5>
                    <p class="card-text">@Model.PendingBookings</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Підтверджені</h5>
                    <p class="card-text">@Model.ConfirmedBookings</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Скасовані</h5>
                    <p class="card-text">@Model.CancelledBookings</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Всього кімнат</h5>
                    <p class="card-text">@Model.TotalRooms</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Доступних кімнат</h5>
                    <p class="card-text">@Model.AvailableRooms</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Всього гостей</h5>
                    <p class="card-text">@Model.TotalGuests</p>
                </div>
            </div>
        </div>
    </div>
</div>